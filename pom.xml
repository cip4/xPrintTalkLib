<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

	<modelVersion>4.0.0</modelVersion>
	<groupId>org.cip4.lib.xprinttalk</groupId>
	<artifactId>xPrintTalk</artifactId>
	<version>0.3-SNAPSHOT</version>
	<packaging>jar</packaging>
	<name>xPrintTalk</name>
	<url>http://maven.apache.org</url>
	<parent>
		<groupId>org.sonatype.oss</groupId>
		<artifactId>oss-parent</artifactId>
		<version>7</version>
	</parent>
	<licenses>
		<license>
			<name>CIP4 Software License</name>
			<url>http://www.cip4.org/open_source/cip4_software_license_v2.html</url>
			<distribution>repo</distribution>
		</license>
	</licenses>
	<scm>
		<url>http://svn.cip4.org/svnroot/trunk/xPrintTalk</url>
		<developerConnection>scm:svn:http://svn.cip4.org/svnroot/trunk/xPrintTalk</developerConnection>
		<connection>scm:svn:http://svn.cip4.org/svnroot/trunk/xPrintTalk</connection>
	</scm>
	<issueManagement>
		<system>JIRA</system>
		<url>http://jira.cip4.org/jira/browse/XJDFLIB</url>
	</issueManagement>
	<reporting>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-changes-plugin</artifactId>
				<version>2.6</version>
				<reportSets>
					<reportSet>
						<reports>
							<report>changes-report</report>
						</reports>
					</reportSet>
				</reportSets>
			</plugin>
		</plugins>
	</reporting>
	<developers>
		<developer>
			<id>r.prosi</id>
			<name>Rainer Prosi</name>
			<email>rainer.prosi@heidelberg.com</email>
		</developer>
		<developer>
			<id>s.meissner</id>
			<name>Stefan Meissner</name>
			<email>s.meissner@flyeralarm.de</email>
		</developer>
	</developers>
	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>2.3</version>
				<configuration>
					<source>1.6</source>
					<target>1.6</target>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>jaxb2-maven-plugin</artifactId>
				<version>1.3.1</version>
				<configuration>
					<schemaDirectory>${basedir}/src/main/resources/org/cip4/lib/xprinttalk/xsd</schemaDirectory>
					<bindingFiles>../resources/org/cip4/lib/xprinttalk/binding.xjb</bindingFiles>
					<outputDirectory>${build.directory}/generated-sources/jaxb</outputDirectory>
					<arguments>-no-header -extension</arguments>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-release-plugin</artifactId>
				<version>2.2.2</version>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-gpg-plugin</artifactId>
				<version>1.4</version>
			</plugin>
			<plugin>
				<artifactId>maven-antrun-plugin</artifactId>
				<version>1.7</version>
				<executions>
					<execution>
						<id>default-cli</id>
						<configuration>
							<target>
								<!-- Prepare -->
								<echo message="Remove old directory" />
								<delete dir="target/generated-sources/jaxb" />
								<mkdir dir="target/generated-sources/jaxb"/>
								
								<!-- Generate java classes from XSD -->
								<echo message="Generate classes..." />
								<property environment="env"/>
								<property name="jdk.dir" value="${env.JAVA_HOME}"/>
								<exec executable="${jdk.dir}/bin/xjc.exe"> 
									<!-- binding file -->
									<arg value="-b"/> 
							        <arg value="src/main/resources/org/cip4/lib/xprinttalk/binding.xjb"/>
							        
							        <!-- further arguments --> 
							        <arg value="-no-header"/>
							        <arg value="-extension"/>
							        
							        <!-- target directory -->
							        <arg value="-d"/> 
							        <arg value="target\generated-sources\jaxb"/> 
									
									<!-- XSD -->
							        <arg value="src/main/resources/org/cip4/lib/xprinttalk/xsd/PrintTalk20.xsd"/> 
							    </exec> 
								
								<!-- Adjust package names -->
								<echo message="Modify package names..." />
								<replace
									dir="target/generated-sources/jaxb/org/cip4/lib/xprinttalk/schema/jdf"
									value="org.cip4.lib.xjdf.schema.jdf">
									<include name="**/*.java" />
									<replacetoken>org.cip4.jdfschema_2_0</replacetoken>
								</replace>

								<!-- Remove old classes -->
								<echo message="Remove old classes..." />
								<delete>
									<fileset dir="src/main/java/org/cip4/lib/xprinttalk/schema/jdf"
										includes="**/*.java" />
								</delete>

								<!-- Copy new classes to target location -->
								<echo message="Copy new classes to target location..." />
								<copy todir="src/main/java/org/cip4/lib/xprinttalk/schema/jdf">
									<fileset dir="target/generated-sources/jaxb/org/cip4/lib/xprinttalk/schema/jdf" />
								</copy>
								
								<!-- clean up -->
								<echo message="Clean up" />
								<delete dir="target\generated-sources\jaxb" />
							</target>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
	<dependencies>
		<dependency>
			<groupId>org.cip4.lib.xjdf</groupId>
			<artifactId>xJdfLib</artifactId>
			<version>0.3-SNAPSHOT</version>
		</dependency>
		<dependency>
			<groupId>javax.xml.bind</groupId>
			<artifactId>jaxb-api</artifactId>
			<version>2.2.6</version>
		</dependency>
		<!-- Apache Tools <dependency> <groupId>commons-io</groupId> <artifactId>commons-io</artifactId> 
			<version>2.1</version> </dependency> -->
		<dependency>
			<groupId>com.sun.xml.bind</groupId>
			<artifactId>jaxb-impl</artifactId>
			<version>2.2.5-2</version>
		</dependency>
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<version>4.10</version>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>commons-lang</groupId>
			<artifactId>commons-lang</artifactId>
			<version>2.6</version>
			<scope>test</scope>
		</dependency>
	</dependencies>
</project>
